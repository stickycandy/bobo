.navigation-bar {
  width: 100%;
  box-sizing: border-box;
  position: relative;
  z-index: 100;
}

.navigation-bar.fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding-top: env(safe-area-inset-top);
}

.navigation-bar__content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  box-sizing: border-box;
  height: 44px;
}

.navigation-bar__title {
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
}

.navigation-bar__back {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44rpx;
  height: 44rpx;
}

.navigation-bar__back-icon {
  width: 12rpx;
  height: 12rpx;
  border-left: 4rpx solid currentColor;
  border-bottom: 4rpx solid currentColor;
  transform: rotate(45deg);
}

.navigation-bar__placeholder {
  width: 100%;
  box-sizing: border-box;
  padding-top: env(safe-area-inset-top);
}
