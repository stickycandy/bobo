.profile-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #7cb8f7 0%, #2cc1ff 100%);
  padding-top: 120rpx;
}

.user-info-section {
  margin: 0 30rpx;
  padding: 20rpx 30rpx;
}

.user-card {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  margin-bottom: 10rpx;
  display: block;
}

.user-id {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 30rpx;
  padding: 15rpx 40rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  display: inline-block;
  backdrop-filter: blur(5px);
} 