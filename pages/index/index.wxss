.container {
  padding: 32rpx;
  padding-top: 150rpx;
}

.games-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

.game-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.game-info {
  text-align: center;
}

.game-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.game-description {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-top: 8rpx;
} 