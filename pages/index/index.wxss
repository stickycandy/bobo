/**index.wxss**/
page {
  height: 100vh;
  overflow: hidden;
  background: #faf8ef;
}

.container {
  padding: 0 32rpx;
  background: #faf8ef;
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
  position: fixed;
  width: 100%;
  padding-top: calc(88rpx + env(safe-area-inset-top));
}

.game-container {
  width: 100%;
  margin: 0 auto;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.score-container, .best-container {
  background: #bbada0;
  padding: 20rpx 32rpx;
  border-radius: 16rpx;
  color: #f9f6f2;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(139, 119, 101, 0.1);
  min-width: 160rpx;
}

.score, .best {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-top: 8rpx;
  color: #f9f6f2;
}

.game-board {
  background: #bbada0;
  padding: 24rpx;
  border-radius: 24rpx;
  position: relative;
  box-shadow: 0 12rpx 24rpx rgba(139, 119, 101, 0.15);
}

.grid-row {
  display: flex;
  margin-bottom: 12rpx;
}

.grid-row:last-child {
  margin-bottom: 0;
}

.grid-cell {
  background: rgba(238, 228, 218, 0.35);
  width: 150rpx;
  height: 150rpx;
  margin-right: 12rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 44rpx;
  font-weight: 600;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  box-shadow: inset 0 2rpx 4rpx rgba(139, 119, 101, 0.1);
  transition: all 0.15s ease;
  border: 1px solid rgba(255, 255, 255, 0.18);
}

.grid-cell:last-child {
  margin-right: 0;
}

