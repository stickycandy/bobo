.game-message {
  display: none;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(238, 228, 218, 0.9);
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  backdrop-filter: blur(10px);
}

.game-message.game-over {
  display: flex;
}

.game-message text {
  font-size: 48rpx;
  font-weight: 600;
  color: #776e65;
  margin-bottom: 24rpx;
}

.game-message button {
  margin-top: 24rpx;
  background: #8f7a66;
  color: #f9f6f2;
  border: none;
  padding: 16rpx 40rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 8rpx rgba(143, 122, 102, 0.3);
}

.game-message button:active {
  background: #7c6957;
  transform: scale(0.98);
}

.game-intro {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}

.intro-text {
  color: #776e65;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  text-align: center;
}

.restart-container {
  width: 100%;
  display: flex;
  justify-content: center;
}

.restart-btn {
  background: linear-gradient(145deg, #8f7a66, #776e65);
  color: #f9f6f2;
  border: none !important;
  padding: 16rpx 48rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(143, 122, 102, 0.3);
  transition: all 0.3s ease;
  width: auto;
  min-width: 180rpx;
  line-height: 2;
  -webkit-appearance: none;
  appearance: none;
  outline: none;
  position: relative;
  z-index: 1;
}

.restart-btn::after {
  border: none;
}

.restart-btn-hover {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(143, 122, 102, 0.3),
              inset 1px 1px 1px rgba(255, 255, 255, 0.1);
  opacity: 0.9;
}

.restart-icon {
  display: none;
}

/* 游戏结束时的重新开始按钮样式保持一致 */
.game-message button {
  background: linear-gradient(145deg, #8f7a66, #776e65);
  color: #f9f6f2;
  border: none !important;
  padding: 16rpx 48rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(143, 122, 102, 0.3);
  width: auto;
  min-width: 180rpx;
  margin: 0 auto;
  line-height: 2;
  -webkit-appearance: none;
  appearance: none;
  outline: none;
}

.game-message button::after {
  border: none;
}

/* 移除不需要的样式 */
.help-btn,
.help-modal,
.help-content,
.help-title,
.help-text,
.close-btn {
  display: none;
}
